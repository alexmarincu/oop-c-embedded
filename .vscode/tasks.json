{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "app: Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Run",
            "type": "shell",
            // "command": "build/artifacts/release/oopce.exe",
            "command": "build/artifacts/release/oopce.out",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "lib: Build",
            "type": "shell",
            "command": "ceedling release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/lib"
            }
        },
        {
            "label": "lib: Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/lib"
            }
        },
        {
            "label": "lib: Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/lib"
            }
        },
        {
            "label": "lib: Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/lib"
            }
        },
        {
            "label": "lib: Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/lib"
            }
        },
        {
            "label": "adoc2pdf",
            "type": "shell",
            "command": "rm -rf media; asciidoctor-pdf -r asciidoctor-diagram ${fileBasename}",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}