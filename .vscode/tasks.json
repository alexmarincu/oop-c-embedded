{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "app: Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Run",
            "type": "shell",
            "windows": {
                "command": "build/artifacts/release/oopce.exe"
            },
            "linux": {
                "command": "build/artifacts/release/oopce.out"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "app: Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            }
        },
        {
            "label": "utils: Build",
            "type": "shell",
            "command": "ceedling release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "utils: Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "utils: Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "utils: Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "utils: Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/utils"
            }
        },
        {
            "label": "Merge compile commands",
            "type": "shell",
            "command": "jq -s add utils/build/artifacts/compile_commands.json app/build/artifacts/compile_commands.json > build/artifacts/compile_commands.json",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "adoc2pdf",
            "type": "shell",
            "command": "asciidoctor-pdf -r asciidoctor-diagram ${fileBasename}",
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "rm doc media"
            ]
        },
        {
            "label": "rm doc media",
            "type": "shell",
            "windows": {
                "command": "Remove-Item -Path media -Recurse -Force"
            },
            "linux": {
                "command": "rm -rf media"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            },
        },
    ]
}