{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "build/artifacts/release/App.exe",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Tests with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": []
        }
    ]
}