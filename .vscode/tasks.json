{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "windows": {
                "command": "build/artifacts/release/oopce.exe"
            },
            "linux": {
                "command": "build/artifacts/release/oopce.out"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "module: Build",
                "Merge compile commands"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "module: Build",
            "type": "shell",
            "command": "ceedling release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/${input:module}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Clean",
            "group": "build",
            "dependsOn": [
                "module: Clean"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "module: Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/${input:module}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Rebuild",
            "group": "build",
            "dependsOn": [
                "module: Rebuild",
                "Merge compile commands"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "module: Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/${input:module}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "module: Test",
                "Merge compile commands"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "module: Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/${input:module}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Test with Coverage",
            "group": "test",
            "dependsOn": [
                "module: Test with Coverage",
                "Merge compile commands"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "module: Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/${input:module}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "Merge compile commands",
            "type": "shell",
            "windows": {
                "command": "New-Item -ItemType Directory -Path build/artifacts/ -Force | Out-Null; jq -s add utils/build/artifacts/compile_commands.json, app/build/artifacts/compile_commands.json | out-file -encoding utf8 build/artifacts/compile_commands.json"
            },
            "linux": {
                "command": "jq -s add utils/build/artifacts/compile_commands.json app/build/artifacts/compile_commands.json > build/artifacts/compile_commands.json"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "adoc2pdf",
            "type": "shell",
            "command": "asciidoctor-pdf -r asciidoctor-diagram ${fileBasename}",
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "rm doc media"
            ],
            "presentation": {
                "panel": "new"
            }
        },
        {
            "label": "rm doc media",
            "type": "shell",
            "windows": {
                "command": "Remove-Item -Path media -Recurse -Force"
            },
            "linux": {
                "command": "rm -rf media"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "new"
            }
        },
    ],
    "inputs": [
        {
            "id": "module",
            "description": "Module",
            "default": "app",
            "type": "pickString",
            "options": [
                "app",
                "utils"
            ]
        }
    ]
}