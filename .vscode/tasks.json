{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "ceedling release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "ceedling clobber",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run App",
            "type": "shell",
            // "command": "build/artifacts/release/oopce.exe",
            "command": "build/artifacts/release/oopce.out",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "ceedling clobber release",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "ceedling test:all",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Test with Coverage",
            "type": "shell",
            "command": "ceedling gcov:all utils:gcov",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "adoc2pdf",
            "type": "shell",
            "command": "rm -rf media; asciidoctor-pdf -r asciidoctor-diagram ${fileBasename}",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}